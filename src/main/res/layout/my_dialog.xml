<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/out_ll"
    android:background="@drawable/view_bbs_center_dialog_bgssssssss"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="提示"
        android:gravity="center"
        android:textColor="@color/gary_3"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/my_dialog_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@color/gary_3"
        android:textSize="14dp"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#99999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/my_dialog_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#037aff"
            android:background="@drawable/bottomleftradiues_select"
            android:text="取消" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:id="@+id/my_dialog_linearlines"
            android:background="#99999999" />

        <TextView
            android:id="@+id/my_dialog_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="43dp"
            android:textColor="#037aff"
            android:gravity="center"
            android:background="@drawable/bottomrightradiues_select"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>